@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" > <i class="bi bi-plus-circle"></i> &nbsp; Create </a>
        </div>
    </div>
    <br />

<table class="table table boarderd table-striped" style="width : 100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Created Date & Time</th>

        </tr>
    </thead>
    <tbody>  @*Lop Actual values*@
        @foreach (var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="30%">
                    @obj.CreatedDate
                </td>

                    <td width="30%">
                        
                        <div class=" w-75 btn-group" role = "group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id ="@obj.CategoryId"
                            class=" btn btn-primary mx-2"> <i class="bi bi-pen"></i> Edit </a>                
                     
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId"
                           class=" btn btn-danger mx-2"> <i class="bi bi-trash3"></i> Delete </a>
                        </div>

                    </td>
            </tr>

        }
    </tbody>
</table>
</div>